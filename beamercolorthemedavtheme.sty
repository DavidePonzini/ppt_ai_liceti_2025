% \setcolorTheme
% Sets the color scheme for the current frame.
% Normal version sets the Light theme, starred version sets the Dark theme
% #1 (*): set the theme to Dark

\NewDocumentCommand\setcolorTheme{s}{
    \IfBooleanTF{#1}
    % dark theme
    {
        \setbeamercolor{author in head/foot}{fg=white}
        \setbeamercolor{date in head/foot}{fg=white}
        \setbeamercolor{page number in head/foot}{fg=white}
        \setbeamercolor{frametitle}{fg=white}
        \setbeamercolor{normal text}{fg=white}
        \setbeamercolor{item}{fg=cyan!50}
        \setbeamercolor{alerted text}{fg=green}
    }
    % light theme
    {
        \setbeamercolor{author in head/foot}{fg=black}
        \setbeamercolor{date in head/foot}{fg=black}
        \setbeamercolor{page number in head/foot}{fg=black}
        \setbeamercolor{frametitle}{fg=black}
        \setbeamercolor{normal text}{fg=black}
        \setbeamercolor{item}{fg=black}
        \setbeamercolor{alerted text}{fg=red}
    }

    % common
    \usebeamercolor[fg]{normal text}
}

\NewDocumentCommand\setcolorTitle{}{
    \setcolorTheme*
    % \setbeamercolor{frametitle}{fg=white}
    % \setbeamercolor{footer}{fg=black}
}


\NewDocumentCommand\setcolorSection{}{
    \setbeamercolor{frametitle}{fg=white}
    \setbeamercolor{author in head/foot}{fg=black}
    \setbeamercolor{date in head/foot}{fg=black}
    \setbeamercolor{page number in head/foot}{fg=black}
}



\NewDocumentCommand\setcolorContent{}{
    \setcolorTheme*

    \setbeamercolor{background canvas}{bg=cyan}
}

\NewDocumentCommand\setcolorExercise{}{
    \setcolorTheme*
    \setbeamercolor{item}{fg=white}
    \setbeamercolor{alerted text}{fg=yellow}
    
    \setbeamercolor{background canvas}{bg=orange}
}

\NewDocumentCommand\setcolorExample{}{
    \setcolorTheme
    \setbeamercolor{page number in head/foot}{fg=white}

    \setbeamercolor{background canvas}{bg=LightGray}
}

